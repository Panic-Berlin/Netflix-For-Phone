<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.netflix"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/world_cinema"
        android:label="@string/app_name"
        android:roundIcon="@drawable/world_cinema"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Netflix" >
        <activity android:name="com.example.netflix.FilmScreen" />
        <activity android:name="com.example.netflix.MovieScreen" />
        <activity
            android:name="com.example.netflix.MainScreen"
            android:label="@string/title_activity_main_screen" />
        <activity android:name="com.example.netflix.LogUpScreen" />
        <activity android:name="com.example.netflix.LoginScreen" />
        <activity android:name="com.example.netflix.LoadScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>